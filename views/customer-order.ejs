<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/index.css">
    <title>Home</title>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Shoestore</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
            <li><a href="/logout">Logout</a></li>
            <li><a href="/customer/6/order">Profile</a></li>
        </ul>
    </nav>
    <div class="dataStore-detail">
        <h1>Welcome to Your Profile <%= user.userName %></h1>
    </div>
    
    <div>
        <table border="1">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Order Number</th>
                    <th>Status</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% user.Orders.forEach((el,index) => { %>
                    <tr>
                        <td><%= ++index %></td>
                        <td><%= el.orderNumber %></td>
                        <td><%= el.statusOrder %></td>
                        <td><%= formatCurrency(el.totalPrice) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
</body>
</html>